# BookTok Application Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# Path to the SQLite database file (supports ~ for home directory)
BOOKTOK_DB_PATH=booktok.db

# Maximum number of database connection retries
BOOKTOK_DB_MAX_RETRIES=3

# Telegram Bot Configuration
# Your Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Whether to use polling (true) or webhooks (false)
TELEGRAM_POLLING=true

# Scheduler Configuration
# Interval in seconds to check for deliveries
BOOKTOK_CHECK_INTERVAL=60

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
BOOKTOK_LOG_LEVEL=INFO

# Optional log file path (leave empty for console only)
BOOKTOK_LOG_FILE=
